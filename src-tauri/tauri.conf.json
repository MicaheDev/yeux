{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "yeux",
  "version": "0.1.0",
  "identifier": "com.micahedev.yeux",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Yeux",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "appimage", "nsis", "app", "dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["assets/**/*"],
    "linux": {
      "appimage": {
        "files": {
          "/usr/share/README.md": "../README.md",
          "/usr/assets": "assets/"
        }
      },
      "deb": {
        "files": {
          "/usr/share/README.md": "../README.md",
          "/usr/share/assets": "assets/",
          "/usr/share/applications/yeux.desktop": "assets/yeux.desktop"
        }
      }
    },
    "windows": {
      "allowDowngrades": true,
      "certificateThumbprint": null,
      "digestAlgorithm": null,
      "nsis": null,
      "signCommand": null,
      "timestampUrl": null,
      "tsp": false,
      "webviewInstallMode": {
        "silent": true,
        "type": "downloadBootstrapper"
      },
      "wix": null
    },
    "macOS": {
      "dmg": {
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        },
        "windowSize": {
          "height": 400,
          "width": 660
        }
      },
      "files": {

      },
      "hardenedRuntime": true,
      "minimumSystemVersion": "10.13"
    }
  }
}
